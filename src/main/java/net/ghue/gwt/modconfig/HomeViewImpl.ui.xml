<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:ghu="urn:import:net.ghue.gwt.modconfig">
	<ui:style>
	html * {
		font-family: RobotoDraft, Roboto, sans-serif;
	}
	
	.left {
		width: 50%;
		float: left;
		padding: 20px;
	}
	
	.right {
		width: 50%;
		position: fixed;
		top: 0px;
		right: 0px;
		bottom: 0px;
	}
	
	.xml {
		font-size: 10px;
		width: 100%;
		height: 100%;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.left}">
			<m:MaterialButton ui:field="github" waves="light">GitHub</m:MaterialButton>

			<m:MaterialTitle title="Basic" description="Basic values that define your GWT Module." />

			<ghu:Panel ui:field="moduleName" title="Module Name"
				description="If left blank, by default the module name is the file
					name, not counting the .gwt.xml part.">
				<ghu:content>
					<m:MaterialTextBox ui:field="moduleNameValue" placeholder="Module Name" />
				</ghu:content>
			</ghu:Panel>

			<ghu:StringPanel ui:field="entryPoint" title="Entry Point" placeholder="Application Entry Point"
				description="This is like your 'main' method. It must be a class that
						implements 'EntryPoint'." />

			<m:MaterialTitle title="Inherited Modules" description="Depedencies." />


		</div>
		<div class="{style.right}">
			<g:TextArea styleName="{style.xml}" ui:field="xml"></g:TextArea>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>